<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_p">
    <LinearLayout
        android:id="@+id/media_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginBottom="1dp"
        android:background="@color/white">
        <ImageView
            android:id="@+id/all_buy_img"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            android:layout_marginRight="10dp"
            android:background="@mipmap/search_all_on_img" />
    <ImageView
        android:id="@+id/media_img"
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:src="@mipmap/media_de_img"
        android:scaleType="centerCrop"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="标题名称"
                android:singleLine="true"
                android:textColor="#181818"
                android:textSize="@dimen/textsize_7"
                />
            <TextView
                android:id="@+id/state"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:textSize="@dimen/textsize_6"
                android:text="展示状态:上刊"

                 />
            <TextView
                android:id="@+id/time"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textSize="@dimen/textsize_6"
                android:text="档期:2015/2/12-2016/1/1"

                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/type_door"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:textSize="@dimen/textsize_6"
                android:text="门禁广告"
                android:paddingLeft="5dp"
                android:layout_marginTop="10dp"
                android:paddingRight="5dp"
                android:gravity="center"

                android:textColor="@color/white"
                android:background="@drawable/sh_text_doom"
                />
            <TextView
                android:id="@+id/type_gate"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:textSize="@dimen/textsize_6"
                android:text="道闸广告"
                android:paddingLeft="5dp"
                android:layout_marginTop="10dp"
                android:paddingRight="5dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:visibility="gone"
                android:background="@drawable/sh_text_gate"
                />

                <TextView
                    android:id="@+id/type_gate_loaction"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/textsize_6"
                    android:text="可调整点位"
                    android:paddingLeft="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:paddingRight="5dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:visibility="gone"
                    android:background="@drawable/loactiion_change_sh"
                    />

            </LinearLayout>
        </LinearLayout>
            <ImageView
                android:id="@+id/show_pop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/gengjin_list_img"
                android:layout_gravity="bottom|right"
                android:paddingTop="20dp"
                android:visibility="gone"
                android:paddingLeft="20dp"
                android:paddingBottom="10dp"
                android:paddingRight="20dp"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>