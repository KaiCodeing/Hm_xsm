<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1">
    <include layout="@layout/title_right_left"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:background="@color/white">
    <EditText
        android:id="@+id/new_passsword_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:password="true"
        android:hint="输入不少于6位密码"
        android:background="@null"
        android:textSize="@dimen/textsize_7"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white_p"
            android:layout_marginLeft="20dp"></View>
        <EditText
            android:id="@+id/password_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:hint="确认密码"
            android:password="true"
            android:background="@null"
            android:textSize="@dimen/textsize_7"/>
    </LinearLayout>
    <TextView
        android:id="@+id/login_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确定"
        android:textColor="@color/white"
        android:background="@drawable/login_bg_on"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="@dimen/textsize_8"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"/>
</LinearLayout>