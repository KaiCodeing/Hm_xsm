<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1">
    <include layout="@layout/title_right_left"></include>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F1F1F1"></View>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
           >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客户名称"
                android:layout_marginLeft="20dp"
                android:textSize="@dimen/textsize_7"
                android:textColor="#2B2B2B"/>

            <EditText
                android:id="@+id/input_company_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@null"
                android:textColor="#171717"
                android:padding="20dp"
                android:gravity="right"
                android:hint="输入客户公司名称"
                android:layout_marginLeft="30dp"
                android:textSize="@dimen/textsize_7"
                android:layout_height="wrap_content" />
        </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F1F1F1"
        android:layout_marginLeft="20dp"></View>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系人"
                android:layout_marginLeft="20dp"
                android:textSize="@dimen/textsize_7"
                android:textColor="#2B2B2B"/>

            <EditText
                android:id="@+id/input_user_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@null"
                android:textColor="#171717"
                android:padding="20dp"
                android:gravity="right"
                android:hint="输入联系人姓名"
                android:layout_marginLeft="30dp"
                android:textSize="@dimen/textsize_7"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F1F1F1"
            android:layout_marginLeft="20dp"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系人职务"
                android:layout_marginLeft="20dp"
                android:textSize="@dimen/textsize_7"
                android:textColor="#2B2B2B"/>

            <EditText
                android:id="@+id/input_user_position"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@null"
                android:textColor="#171717"
                android:padding="20dp"
                android:gravity="right"
                android:hint="输入联系人职务"
                android:layout_marginLeft="30dp"
                android:textSize="@dimen/textsize_7"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#F1F1F1"
            ></View>
        <LinearLayout
            android:id="@+id/layout_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="投放区域"
                android:layout_marginLeft="20dp"
                android:textSize="@dimen/textsize_7"
                android:textColor="#2B2B2B"/>

            <TextView
                android:id="@+id/input_city"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@null"
                android:textColor="#171717"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingRight="5dp"
                android:gravity="right"
                android:hint="选择投放区域"
                android:layout_marginLeft="30dp"
                android:textSize="@dimen/textsize_7"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:background="@mipmap/sanjiao_next_img"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F1F1F1"
            android:layout_marginLeft="20dp"></View>
        <LinearLayout
            android:id="@+id/industry_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="所属行业"
                android:layout_marginLeft="20dp"
                android:textSize="@dimen/textsize_7"
                android:textColor="#2B2B2B"/>

            <TextView
                android:id="@+id/select_industry"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@null"
                android:textColor="#171717"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingRight="5dp"
                android:gravity="right"
                android:hint="选择行业"
                android:layout_marginLeft="30dp"
                android:textSize="@dimen/textsize_7"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:background="@mipmap/sanjiao_next_img"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F1F1F1"
            android:layout_marginLeft="20dp"></View>
        <LinearLayout
            android:id="@+id/number_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预计投放数量"
                android:layout_marginLeft="20dp"
                android:textSize="@dimen/textsize_7"
                android:textColor="#2B2B2B"/>

            <EditText
                android:id="@+id/input_number"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@null"
                android:textColor="#171717"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:inputType="number"
                android:paddingRight="5dp"
                android:gravity="right"
                android:hint="输入投放数量"
                android:layout_marginLeft="30dp"
                android:textSize="@dimen/textsize_7"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:background="@mipmap/sanjiao_next_img"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F1F1F1"
            android:layout_marginLeft="20dp"></View>
        <LinearLayout
            android:id="@+id/start_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预计时间开始日期"
                android:layout_marginLeft="20dp"
                android:textSize="@dimen/textsize_7"
                android:textColor="#2B2B2B"/>

            <TextView
                android:id="@+id/select_start_date"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@null"
                android:textColor="#171717"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingRight="5dp"
                android:gravity="right"
                android:hint="选择日期"
                android:layout_marginLeft="30dp"
                android:textSize="@dimen/textsize_7"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:background="@mipmap/sanjiao_next_img"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F1F1F1"
            android:layout_marginLeft="20dp"></View>
        <LinearLayout
            android:id="@+id/over_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="终止日期"
            android:layout_marginLeft="20dp"
            android:textSize="@dimen/textsize_7"
            android:textColor="#2B2B2B"/>

        <TextView
            android:id="@+id/select_over_date"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:textColor="#171717"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingRight="5dp"
            android:gravity="right"
            android:hint="选择日期"
            android:layout_marginLeft="30dp"
            android:textSize="@dimen/textsize_7"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:background="@mipmap/sanjiao_next_img"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"/>
    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F1F1F1"
            android:layout_marginLeft="20dp"></View>
    </LinearLayout>
    <TextView
        android:id="@+id/login_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发布"
        android:textColor="@color/white"
        android:background="@drawable/login_bg_on"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:textSize="@dimen/textsize_7"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>