<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#88000000">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_show_whit"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >
        <LinearLayout
            android:id="@+id/layout_genjin"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingTop="30dp"
            android:paddingLeft="20dp"
            android:paddingBottom="25dp"
            android:paddingRight="20dp"
            android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="跟进情况"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/textsize_8"
            android:textColor="#181818"/>
            <TextView
                android:id="@+id/content_follow"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="right"
                android:layout_marginLeft="80dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="跟进的情况"
                android:textSize="@dimen/textsize_8"
                />
            <ImageView
                android:layout_width="10dp"
                android:layout_height="15dp"
                android:layout_marginLeft="5dp"
                android:background="@mipmap/sanjiao_next_img"
                android:layout_gravity="center"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E1E1E1"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            android:paddingBottom="20dp"
            android:paddingRight="20dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="报备状态"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/textsize_8"
                android:textColor="#181818"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="@dimen/textsize_8"
                />
            <TextView
                android:id="@+id/typekey"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:gravity="right"
                android:background="@drawable/bg_check_indu_on"
                android:text="发布"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="@dimen/textsize_8"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"

            android:background="#E1E1E1"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center|right"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            android:paddingBottom="10dp"
            android:paddingRight="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/compile_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:gravity="center"
                android:drawableLeft="@mipmap/compile_state_img"
                android:text="编辑"
                android:drawablePadding="5dp"
                android:layout_marginRight="20dp"
                />
            <TextView
                android:id="@+id/delect_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:gravity="center"
                android:drawableLeft="@mipmap/delect_state_img"
                android:text="删除"
                android:drawablePadding="5dp"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>