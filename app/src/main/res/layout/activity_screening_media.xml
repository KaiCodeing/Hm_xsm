<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1">
 <include layout="@layout/title_right_left"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="按展示状态"
            />
        <RadioGroup
            android:id="@+id/group1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <RadioButton
                android:id="@+id/button_1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@drawable/text_select_bg"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:background="@drawable/sele_check_indu"
                android:text="全部"
                android:button="@null"
                android:textSize="@dimen/textsize_7"
                android:checked="true"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
               />
            <RadioButton
                android:id="@+id/button_2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:background="@drawable/sele_check_indu"
                android:text="上刊"
                android:textColor="@drawable/text_select_bg"
                android:button="@null"
                android:textSize="@dimen/textsize_7"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
              />
            <RadioButton
                android:id="@+id/button_3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@drawable/text_select_bg"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:background="@drawable/sele_check_indu"
                android:text="空档期"
                android:button="@null"
                android:textSize="@dimen/textsize_7"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
              />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="15dp"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="按限制内容"
            />
        <RadioGroup
            android:id="@+id/group2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <RadioButton
                android:id="@+id/button_2_1"
                android:textColor="@drawable/text_select_bg"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:background="@drawable/sele_check_indu"
                android:text="不限"
                android:button="@null"
                android:textSize="@dimen/textsize_7"
                android:checked="true"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                />
            <RadioButton
                android:id="@+id/button_2_2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@drawable/text_select_bg"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:background="@drawable/sele_check_indu"
                android:text="房地产"
                android:button="@null"
                android:textSize="@dimen/textsize_7"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                />
            <RadioButton
                android:id="@+id/button_2_3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@drawable/text_select_bg"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:background="@drawable/sele_check_indu"
                android:text="医疗"
                android:button="@null"
                android:textSize="@dimen/textsize_7"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                />
        </RadioGroup>

    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_marginTop="15dp"
    android:padding="10dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="是否可调整点位"
        />
    <RadioGroup
        android:id="@+id/group3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <RadioButton
            android:id="@+id/button_3_1"
            android:textColor="@drawable/text_select_bg"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:background="@drawable/sele_check_indu"
            android:text="不限"
            android:button="@null"
            android:textSize="@dimen/textsize_7"
            android:checked="true"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            />
        <RadioButton
            android:id="@+id/button_3_2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@drawable/text_select_bg"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:background="@drawable/sele_check_indu"
            android:text="是"
            android:button="@null"
            android:textSize="@dimen/textsize_7"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            />
        <RadioButton
            android:id="@+id/button_3_3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@drawable/text_select_bg"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:background="@drawable/sele_check_indu"
            android:text="否"
            android:button="@null"
            android:textSize="@dimen/textsize_7"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            />
    </RadioGroup>

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="15dp"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="按楼盘类型"
            />
        <RadioGroup
            android:id="@+id/group4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <RadioButton
                android:id="@+id/button_4_1"
                android:textColor="@drawable/text_select_bg"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:background="@drawable/sele_check_indu"
                android:text="不限"
                android:button="@null"
                android:textSize="@dimen/textsize_7"
                android:checked="true"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                />
            <RadioButton
                android:id="@+id/button_4_2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@drawable/text_select_bg"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:background="@drawable/sele_check_indu"
                android:text="住宅"
                android:button="@null"
                android:textSize="@dimen/textsize_7"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                />
            <RadioButton
                android:id="@+id/button_4_3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@drawable/text_select_bg"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:background="@drawable/sele_check_indu"
                android:text="别墅"
                android:button="@null"
                android:textSize="@dimen/textsize_7"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/button_4_4"
                    android:textColor="@drawable/text_select_bg"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sele_check_indu"
                    android:text="商超"
                    android:button="@null"
                    android:textSize="@dimen/textsize_7"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    />
                <RadioButton
                    android:id="@+id/button_4_5"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@drawable/text_select_bg"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sele_check_indu"
                    android:text="写字楼"
                    android:button="@null"
                    android:textSize="@dimen/textsize_7"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    />
                <RadioButton
                    android:layout_width="0dp"
                    android:visibility="invisible"
                    android:layout_weight="1"
                    android:textColor="@drawable/text_select_bg"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sele_check_indu"
                    android:text="别墅"
                    android:button="@null"
                    android:textSize="@dimen/textsize_7"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    />
            </LinearLayout>
        </RadioGroup>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="区域筛选"
            android:layout_marginLeft="20dp"
            android:textSize="@dimen/textsize_7"
            android:textColor="#2B2B2B"/>

        <TextView
            android:id="@+id/input_city"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:textColor="#171717"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingRight="5dp"
            android:gravity="right"
            android:hint="选择区域"
            android:layout_marginLeft="30dp"
            android:textSize="@dimen/textsize_7"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:background="@mipmap/sanjiao_next_img"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/number_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上刊日期筛选"
            android:layout_marginLeft="20dp"
            android:textSize="@dimen/textsize_7"
            android:textColor="#2B2B2B"/>

        <TextView
            android:id="@+id/input_number"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:textColor="#171717"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingRight="5dp"
            android:gravity="right"
            android:hint="选择上刊日期"
            android:layout_marginLeft="30dp"
            android:textSize="@dimen/textsize_7"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:background="@mipmap/sanjiao_next_img"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/over_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下刊日期筛选"
            android:layout_marginLeft="20dp"
            android:textSize="@dimen/textsize_7"
            android:textColor="#2B2B2B"/>

        <TextView
            android:id="@+id/over_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:textColor="#171717"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingRight="5dp"
            android:gravity="right"
            android:hint="选择下刊日期"
            android:layout_marginLeft="30dp"
            android:textSize="@dimen/textsize_7"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:background="@mipmap/sanjiao_next_img"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"/>
    </LinearLayout>
    <TextView
        android:id="@+id/empty_condition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/empty_condition_bg"
        android:text="清空"
        android:gravity="center"/>
</LinearLayout>