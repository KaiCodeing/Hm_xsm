<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <include layout="@layout/title_right_left"></include>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:background="#DADADA"></View>
    <LinearLayout
        android:id="@+id/layout_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="城市"
            android:gravity="center"
            android:textColor="#585858"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#DADADA"></View>
        <TextView
            android:id="@+id/lianmen_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="联盟结算价"
            android:gravity="center"
            android:textColor="#585858"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#DADADA"></View>
        <TextView
            android:id="@+id/chengjiao_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="成交价"
            android:gravity="center"
            android:textColor="#585858"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#DADADA"></View>
        <TextView
            android:id="@+id/kanli_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="刊例价"
            android:gravity="center"
            android:textColor="#585858"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DADADA"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/city_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:text="济南市"
            android:singleLine="true"
            android:textSize="@dimen/textsize_8"
            android:gravity="center"
            android:textColor="#181818"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#DADADA"></View>
        <TextView
            android:id="@+id/lianmen_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="100"
            android:singleLine="true"
            android:textSize="@dimen/textsize_8"
            android:gravity="center"
            android:textColor="#181818"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#DADADA"></View>
        <TextView
            android:id="@+id/chengjiao_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="100-200"

            android:singleLine="true"
            android:textSize="@dimen/textsize_8"
            android:gravity="center"
            android:textColor="@color/backgroud_title"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#DADADA"></View>
        <TextView
            android:id="@+id/kanji_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="120"
            android:singleLine="true"
            android:textSize="@dimen/textsize_8"
            android:gravity="center"
            android:textColor="#181818"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DADADA"></View>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <com.hemaapp.hm_FrameWork.view.RefreshLoadmoreLayout
            android:id="@+id/refreshLoadmoreLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible" >

            <ExpandableListView
                android:id="@+id/expanded_menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null"
                ></ExpandableListView>
        </com.hemaapp.hm_FrameWork.view.RefreshLoadmoreLayout>

        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </FrameLayout>
</LinearLayout>