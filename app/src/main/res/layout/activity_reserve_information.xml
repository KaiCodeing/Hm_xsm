<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1">
<include layout="@layout/title_right_image"></include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:background="@color/white"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/reserve_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="鲁能制药"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_8"/>
                <TextView
                    android:id="@+id/reserve_time"
                    android:singleLine="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textsize_7"
                    android:text="05-20 02:10"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/reserve_delete"
                android:layout_width="15dp"
                android:layout_gravity="center"
                android:visibility="invisible"
                android:layout_height="18dp"
                android:layout_marginRight="10dp"
                android:background="@mipmap/reserve_delete_img"/>
            <TextView
                android:id="@+id/reserve_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待成交"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:padding="2dp"
                android:background="@color/backgroud_title"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#F1F1F1"></View>
        <TextView
            android:id="@+id/reserve_loaction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="预定点位:XXXXXXXXXXXXX"
            android:singleLine="true"
            android:visibility="gone"
            android:textColor="#212121"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/reserve_issue_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="预定发布日期:XXXXXXXXX"
            android:singleLine="true"
            android:padding="15dp"
            android:textColor="#212121"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:src="@mipmap/line_two_img" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="已选点位"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:background="#D7D7D7"></View>

        </LinearLayout>

        <com.hemaapp.xsm.view.MyListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:scrollbars="none"></com.hemaapp.xsm.view.MyListView>
    </LinearLayout>
            </LinearLayout>
    </ScrollView>
</LinearLayout>