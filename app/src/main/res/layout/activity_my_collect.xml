<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_p">
<include layout="@layout/title_right_left"></include>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white_p"></View>
<RadioGroup
    android:id="@+id/collect_radio"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="horizontal"
    android:background="@color/white">
    <RadioButton
        android:id="@+id/radio1"
        android:layout_width="0dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="媒体档期"
        android:button="@null"
        android:background="@null"
        android:checked="true"
        android:gravity="center"
        android:textColor="@drawable/select_collect_text"
        />
    <View
        android:layout_width="1dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_height="match_parent"
        android:background="@color/white_p"></View>
    <RadioButton
        android:id="@+id/radio2"
        android:layout_width="0dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="全国单"
        android:button="@null"
        android:background="@null"
        android:gravity="center"
        android:textColor="@drawable/select_collect_text"
        />
    <View
        android:layout_width="1dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_height="match_parent"
        android:background="@color/white_p"></View>
    <RadioButton
        android:id="@+id/radio3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="案例展示"
        android:button="@null"
        android:background="@null"
        android:gravity="center"
        android:textColor="@drawable/select_collect_text"
        />
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/white_p"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"></View>
    <RadioButton
        android:id="@+id/radio4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="联盟公司"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:button="@null"
        android:background="@null"
        android:gravity="center"
        android:textColor="@drawable/select_collect_text"
        />

</RadioGroup>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>