<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_p"
    android:orientation="vertical">

    <include layout="@layout/title_right_left"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/clear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="旧密码"
                android:layout_marginLeft="20dp"
                android:textColor="#2F2F2F"
                android:textSize="@dimen/textsize_8" />


            <EditText
                android:id="@+id/old_password"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="请输入旧密码"
                android:padding="20dp"
                android:singleLine="true"
                android:password="true"
                android:background="@null"
                android:textColor="#A0A0A0"
                android:textSize="@dimen/textsize_8" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:background="@color/white_p"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新密码"
                android:layout_marginLeft="20dp"
                android:textColor="#2F2F2F"
                android:textSize="@dimen/textsize_8" />


            <EditText
                android:id="@+id/new_password"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="请输入新密码"
                android:padding="20dp"
                android:singleLine="true"
                android:password="true"
                android:background="@null"
                android:textColor="#A0A0A0"
                android:textSize="@dimen/textsize_8" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:background="@color/white_p"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="重复密码"
                android:layout_marginLeft="20dp"
                android:textColor="#2F2F2F"
                android:textSize="@dimen/textsize_8" />


            <EditText
                android:id="@+id/yes_new_password"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="请再次输入新密码"
                android:padding="20dp"
                android:singleLine="true"
                android:password="true"
                android:background="@null"
                android:textColor="#A0A0A0"
                android:textSize="@dimen/textsize_8" />
        </LinearLayout>


    </LinearLayout>
    <TextView
        android:id="@+id/login_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="保存"
        android:textColor="@color/white"
        android:background="@drawable/login_bg_on"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:textSize="@dimen/textsize_8"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"/>
</LinearLayout>